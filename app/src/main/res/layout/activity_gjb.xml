<?xml version="1.0" encoding="utf-8"?>
<com.app.yoo.silenceg.SildingFinishLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gjb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.yoo.silenceg.GjbActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_gjb">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="挂机邦账号登陆"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView"
                android:layout_toEndOf="@+id/textView"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:id="@+id/tv_status"
                android:textSize="14sp"
                android:textColor="@android:color/holo_red_light"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_below="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/et_username"
                android:hint="用户名"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_width="80dp" />

            <EditText
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/et_password"
                android:layout_toRightOf="@+id/et_username"
                android:layout_toEndOf="@+id/et_username"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:layout_alignTop="@+id/et_username"
                android:hint="密码"
                android:layout_weight="1"
                android:textSize="12sp" />

            <Button
                android:text="登陆"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/et_password"
                android:layout_toRightOf="@+id/et_password"
                android:layout_toEndOf="@+id/et_password"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:id="@+id/bt_login"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="刷新"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt_refresh"
                android:layout_weight="1"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_total"
                android:layout_weight="1"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_getMoneyResult"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <Button
                android:text="领取工资"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt_getmoney"
                android:layout_weight="1"
                android:visibility="gone" />

            <Button
                android:text="查询待领工资明细"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt_showDetail"
                android:layout_weight="1"
                android:visibility="gone" />

            <Button
                android:text="历史工资明细"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt_history"
                android:layout_weight="1" />

            <Button
                android:text="申请提现"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt_withdraw"
                android:layout_weight="1"
                android:visibility="gone" />

            <Button
                android:text="提现记录"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt_gjb_withdraw_history"
                android:layout_weight="1" />

            <Button
                android:text="备份数据库"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt_backupDB"
                android:layout_weight="1" />

            <Button
                android:text="恢复数据库"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bt_restoreDB"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</com.app.yoo.silenceg.SildingFinishLayout>
